<div class="container">

  <form id="cadastro-form" action="/cadastrado" method="post">
    <h2>Cadastro e listagem de produto</h2><br>
    <div class="form-group">
      <label for="nome">Nome do Produto:</label>
      <input type="text" id="nome" name="nome" required>
    </div>
    <div class="form-group">
      <label for="descricao">Descrição do Produto:</label>
      <textarea id="descricao" name="descricao" rows="4" required></textarea>
    </div>
    <div class="form-group">
      <label for="valor">Valor do Produto:</label>
      <input type="number" id="valor" name="valor" min="0" step="0.01" required>
    </div>
    <div class="form-group">
      <label for="disponibilidade">Disponível para Venda:</label>
      <select id="disponibilidade" name="disponibilidade" required>
        <option value="">Selecione</option>
        <option value="sim">Sim</option>
        <option value="nao">Não</option>
      </select>
    </div>
    <div class="form-group">
      <input type="submit" value="Cadastrar Produto">
    </div>
  </form>

  <form action="#">

   <div class="lista">
    <br>
    <h2>Lista de produtos:</h2>
    {{#each produtos}}
    <div class="itens">
        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" value="{{this.nome}}" readonly>

        <label for="descricao">Descrição:</label>
        <textarea id="descricao" name="descricao" readonly>{{this.descricao}}</textarea>

        <label for="valor">Valor:</label>
        <input type="text" id="valor" name="valor" value="{{this.valor}}" readonly>

        <label for="disponivel">Disponível:</label>
        <input type="text" id="disponivel" name="disponivel" value="{{this.disponivel}}" readonly>
    </div>
    {{/each}}
</div>


</div>